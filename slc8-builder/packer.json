{
  "_comment": "Alma 8.7 builder X-enabled",
  "variables": {
    "DOCKER_HUB_REPO": "alisw",
    "GIT_VERSION": "2.32.0"
  },
  "builders": [
    {
      "type": "docker",
      "image": "almalinux:8.7",
      "commit": true,
      "changes": [
        "ENTRYPOINT [\"\"]",
        "CMD [\"/bin/bash\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "GIT_VERSION={{user `GIT_VERSION`}}"
      ],
      "script": "provision.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `DOCKER_HUB_REPO`}}/slc8-builder",
        "tag": "latest"
      },
      "docker-push"
    ]
  ]
}
