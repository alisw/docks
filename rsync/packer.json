{
  "_comment": "Build a rsync image",
  "variables": {
    "centos_major": "7",
    "DOCKER_HUB_REPO": "aliswdev"
  },
  "builders": [
    {
      "type": "docker",
      "image": "centos:centos{{user `centos_major`}}",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "rsync/run.sh",
      "destination": "/run.sh"
    },
    {
      "type": "shell",
      "inline": [
        "yum update -y && yum install -y rsync nc && yum clean all"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `DOCKER_HUB_REPO`}}/rsync",
        "tag": "latest"
      },
      "docker-push"
    ]
  ]
}
