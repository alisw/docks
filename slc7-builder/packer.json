{
  "_comment": "CentOS 7 builder X-enabled",
  "variables": {
    "DOCKER_HUB_REPO": "alisw",
    "CCTOOLS_VERSION": "6.2.9"
  },
  "builders": [
    {
      "type": "docker",
      "image": "centos:7",
      "commit": true,
      "changes": [
        "CMD [\"bash\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "CCTOOLS_VERSION={{user `CCTOOLS_VERSION`}}"
      ],
      "script": "provision.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `DOCKER_HUB_REPO`}}/slc7-builder",
        "tag": "latest"
      },
      "docker-push"
    ]
  ]
}
