{
  "_comment": "Build a docker enabled builder",
  "variables": {
    "DOCKER_HUB_REPO": "alisw"
  },
  "builders": [
    {
      "type": "docker",
      "image": "node",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
         "git clone https://github.com/alisw/alihubot.git",
         "echo 'cd alihubot && bin/hubot --adapter slack' > /run.sh && chmod +x /run.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `DOCKER_HUB_REPO`}}/hubot",
        "tag": "latest"
      },
      "docker-push"
    ]
  ]
}
