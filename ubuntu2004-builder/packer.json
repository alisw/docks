{
  "_comment": "Ubuntu 20.04 builder X-enabled",
  "variables": {
    "REPO": "registry.cern.ch/alisw/ubuntu2004-builder",
    "TAG": "latest"
  },
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:20.04",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "provision.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `REPO`}}",
        "tag": "{{user `TAG`}}"
      }
    ]
  ]
}
