{
  "_comment": "Jenkins service",
  "variables": {
    "jenkins_version": "2.46.3",
    "REPO": "registry.cern.ch/alisw/jenkins"
  },
  "builders": [
    {
      "type": "docker",
      "image": "centos:centos7",
      "commit": true,
      "changes": [
        "ENTRYPOINT [\"\"]",
        "CMD [\"\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "run.sh",
      "destination": "/run.sh"
    },
    {
      "type": "shell",
      "script": "provision.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `REPO`}}",
        "tag": "{{user `jenkins_version`}}"
      }
    ]
  ]
}
