{
  "_comment": "ALICE publisher",
  "variables": {
    "REPO": "registry.cern.ch/alisw/publisher",
    "TAG": "latest"
  },
  "builders": [
    {
      "type": "docker",
      "image": "almalinux:9-minimal",
      "commit": true,
      "changes": [
        "ENTRYPOINT [\"\"]",
        "CMD [\"/bin/bash\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "provision.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `REPO`}}",
        "tag": "{{user `TAG`}}"
      },
      {
        "type": "shell-local",
        "inline": ["echo 'The image was built successfully. To push the image to the registry, you can run: docker push {{user `REPO`}}:{{user `TAG`}}'"]
      }

    ]
  ]
}
