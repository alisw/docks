{
  "_comment": "Ubuntu 22.04 builder X-enabled",
  "variables": {
    "REPO": "registry.cern.ch/alisw/ubuntu2204-builder",
    "TAG": "latest"
  },
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:22.04",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "provision.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `REPO`}}",
        "tag": "{{user `TAG`}}"
      },
      {
        "type": "shell-local",
        "inline": ["echo 'The image was built successfully. To push the image to the registry, you can run: docker push {{user `REPO`}}:{{user `TAG`}}'"]
      }

    ]
  ]
}
