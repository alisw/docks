{
  "_comment": "CentOS Stream 8 builder X-enabled",
  "variables": {
    "DOCKER_HUB_REPO": "alisw"
  },
  "builders": [
    {
      "type": "docker",
      "image": "quay.io/centos/centos:stream8",
      "commit": true,
      "changes": [
        "ENTRYPOINT [\"\"]",
        "CMD [\"/bin/bash\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "provision.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `DOCKER_HUB_REPO`}}/cs8-builder",
        "tag": "latest"
      },
      "docker-push"
    ]
  ]
}
